<% provide(:title, 'Posts') %>
<h1>All posts</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= will_paginate %>
    <table>
      <thead>
        <tr>
          <th>Posts</th>
          <% if logged_in? %>
            <th>User</th>
          <% end %>
          <th colspan="1"></th>
        </tr>
      </thead>

      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.content %></td>
            <% if logged_in? %>
              <td><%= link_to "#{post.user.name}  ( #{post.user.email} )", post.user %></td>
                <% if current_user.admin? && !current_user?(@user) %>
                  <td>
                    <%= link_to "delete", post, method: :delete, data: { confirm: "You sure?" } %>
                  </td>
                  <td> | </td>
                <% end %>
            <% end %>
            <td><%= link_to 'Show', post %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate %>
  </div>
</div>
