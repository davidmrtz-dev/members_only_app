<% provide(:title, 'Posts') %>
<h1>All posts</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= will_paginate %>
    <table>
      <thead>
        <tr>
          <th>Posts</th>
          <% if logged_in? %>
            <th>User</th>
          <% end %>
          <th colspan="1"></th>
        </tr>
      </thead>

      <tbody>
        <% @posts.each do |post| %>
          <%= render post %>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate %>
  </div>
</div>
