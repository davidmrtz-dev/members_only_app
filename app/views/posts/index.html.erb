<table>
  <thead>
    <tr>
      <th>Content</th>
      <%# if logged_in? %>
        <th>User</th>
      <%# end %>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.content %></td>
        <%# if logged_in? %>
          <td><%= link_to "#{post.user.name}  ( #{post.user.email} )", post.user %></td>
        <%# end %>
        <td><%= link_to 'Show', post %></td>
      </tr>
    <% end %>
  </tbody>
</table>
