<% provide(:title, 'Post') %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <p>
      <strong>
        <h2> Content: </h2>
      </strong>
      <%= @post.content %>
    </p>
    <% if logged_in? %>
      <strong>
        User:
      </strong>
      <%= @post.user.name %> <br>
      <% if current_user?(@post.user)%>
        <span><%= link_to "Edit", edit_post_path(@post.id) %></span>
        <span>|</span>
      <% end %>
      <% if current_user.admin? || current_user?(@post.user)%>
        <span><%= link_to "Delete", @post, method: :delete, data: { confirm: "You sure?" } %></span>
        <span>|</span>
      <% end %>
    <% end %>
  </div>
  <div class="col-md-6 col-md-offset-3">
    <% if @post.comments.any? %>
      <h2>Comments</h2>
      <ol class="comments">
        <%= render @comments %>
      </ol>
    <% end %>
  </div>
  <div class="col-md-6 col-md-offset-3">
    <%= render 'comment_form' %>
  </div>
</div>
