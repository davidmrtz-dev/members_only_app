<tr>
  <td><%= post.content %></td>
  <% if logged_in? %>
    <td><%= link_to "#{post.user.name}  ( #{post.user.email} )", post.user %></td>
    <td><%= link_to 'Show', post %></td>
    <% if current_user?(post.user)%>
      <td> | </td>
      <td>
        <%= link_to "Edit", edit_post_path(post.id), data: { confirm: "You sure?" } %>
      </td>
    <% end %>
    <% if current_user.admin? || current_user?(post.user)%>
      <td> | </td>
      <td>
        <%= link_to "Delete", post, method: :delete, data: { confirm: "You sure?" } %>
      </td>
    <% end %>
  <% end %>
</tr>
